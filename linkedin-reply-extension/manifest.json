{
  "manifest_version": 3,
  "name": "LinkedIn Reply Button",
  "version": "1.0",
  "description": "Adds a Reply button to LinkedIn messages.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
